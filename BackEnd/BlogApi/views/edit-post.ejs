<!-- header -->
<%- include("partials/header") %>
<!--  end    header -->

<!-- main -->

<section class="container my-5 px-3 px-md-5">
  <form action="/posts/<%= post.id %>/update" method="POST" class="p-4 shadow rounded-4 bg-white">
    <h2 class="text-center mb-4 fw-bold gradient-text">Edit Your Post </h2>

    <!-- title-->
    <div class="mb-4">
      <label for="title" class="form-label fw-semibold">Title</label>
      <input
        type="text"
        id="title"
        name="title"
        class="form-control rounded-3 shadow-sm"
        value="<%= post.title %>"
        required
        placeholder="Enter a descriptive title"
      >
    </div>

    <!-- content -->
    <div class="mb-4">
      <label for="content" class="form-label fw-semibold">Content</label>
      <textarea
        id="content"
        name="content"
        class="form-control rounded-3 shadow-sm"
        rows="6"
        required
        placeholder="Write your post content here..."
      ><%= post.content %></textarea>
    </div>

    <!-- button -->
    <div class="d-flex flex-column flex-sm-row justify-content-center mt-4 gap-3">
      <a href="/posts/<%= post.id %>" class="btn btn-outline-secondary  rounded-pill px-5 py-2 btn-lg w-sm-auto">
        <i class="fas fa-arrow-left me-1"></i>     Cancel   
      </a>
      <button type="submit" class="btn btn-gradient rounded-pill px-4 py-2 btn-lg w-sm-auto">
        <i class="fas fa-save me-1"></i> Save Changes
      </button>
    </div>

  </form>
</section>


<!-- end     main -->





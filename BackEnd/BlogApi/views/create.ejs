<!-- main -->

<section class="post-preview container my-5" id="blog">
  <div class="card shadow-lg border-0 rounded-4 p-4 p-md-5">
    <h2 class="mb-4 fw-bold gradient-text text-center">Create a New Post</h2>
    <form action="/create" method="POST">
      <div class="mb-3">
        <label for="title" class="form-label fw-semibold">Title</label>
        <input
          type="text"
          class="form-control form-control-lg rounded-3"
          name="title"
          id="title"
          placeholder="Enter a captivating title..."
          required
        />
      </div>

      <div class="mb-4">
        <label for="content" class="form-label fw-semibold">Content</label>
        <textarea
          class="form-control rounded-3"
          name="content"
          id="content"
          rows="6"
          placeholder="Share your thoughts..."
          required
        ></textarea>
      </div>

      <div class="text-center">
        <button type="submit" class="btn btn-gradient px-5 py-2 btn-lg">
          <i class="fas fa-paper-plane me-2"></i> Create Post
        </button>
      </div>
    </form>
  </div>
</section>


<!-- end     main -->





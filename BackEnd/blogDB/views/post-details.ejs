<!-- main -->


<section class="container my-5 px-3 px-md-5">
  <div class="card shadow-sm border-0 rounded-4 p-4 p-md-5">
    
    <!-- Avatar & Title & Actions -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-5 gap-3">
      
      <!-- Avatar + Title -->
      <div class="d-flex align-items-center gap-3 flex-grow-1">
        <img 
          src="<%= post.imageUrl %>" 
          class="rounded-circle shadow-sm" 
          alt="Avatar" 
          style="width:60px; height:60px; object-fit:cover;"
        />
        <h1 class="gradient-text fw-bold mb-0 fs-2 fs-md-3 text-nowrap">
          <%= post.title %>
        </h1>
      </div>
      
      <!-- Edit & Delete -->
      <div class="d-flex gap-2">
        <a 
          href="/posts/<%= post.id %>/edit" 
          class="btn btn-gradient rounded-pill px-4 py-2"
        >
          <i class="fas fa-edit me-1"></i> Edit
        </a>
        <form 
          action="/posts/<%= post.id %>?_method=DELETE" 
          method="POST" 
          class="d-inline"
          onsubmit="return confirm('Are you sure you want to delete this post?');"
        >
          <button type="submit" class="btn btn-outline-danger rounded-pill px-4 py-2">
            <i class="fas fa-trash-alt me-1"></i> Delete
          </button>
        </form>
      </div>
    </div>

    <!-- Post Content -->
    <div class="px-3 px-md-4 text-center" style="max-width: 800px; margin: auto;">
      <p class="text-muted fs-5" style="line-height:1.8; text-align: justify;">
        <%= post.content %>
      </p>
    </div>

    <!-- Share Buttons -->
    <div class="text-center border-top py-4 mt-5">
      <p class="mb-3 fw-semibold">Share this post with your friends:</p>
      <button class="btn btn-primary me-2" style="background-color:#3b5998;">
        <i class="fab fa-facebook-f"></i>
      </button>
      <button class="btn btn-primary me-2" style="background-color:#55acee;">
        <i class="fab fa-twitter"></i>
      </button>
      <button class="btn btn-primary me-2" style="background-color:#0082ca;">
        <i class="fab fa-linkedin"></i>
      </button>
      <button class="btn btn-gradient">
        <i class="fas fa-comments me-1"></i> Add comment
      </button>
    </div>

  </div>
</section>

  

<!-- end     main -->




